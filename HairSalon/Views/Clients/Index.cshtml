@using HairSalon.Models;

<h1> Clients</h1>

<p>@Html.ActionLink("Add new client", "Create")</p>

@if (@Model.Count == 0)
{
  <h3> No clients have been added</h3>
}

<ul>
  @foreach(Client client in Model)
  {
    <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
  }
</ul>
