@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>;

@{
  Layout = "_Layout";
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h4>There are no Stylists</h4>
}

<p>@Html.ActionLink("Add a new stylist", "Create")</p>


<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>
