@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Details</h2>
<h1> @Model.StylistName </h1>

@if (@Model.Clients.Count == 0)
{
  <h3>@Model.StylistName does not have any clients</h3>
}
else
{
  <h2>@Model.StylistName clients </h2>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li> @Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId }) </li>
    }
  </ul>
    
}
