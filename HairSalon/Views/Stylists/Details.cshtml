@model HairSalon.Models.Stylist
@using HairSalon.Models

<p>@Html.ActionLink("Home", "Index", "Home")</p>

<h2>Stylist Details</h2>
<h1> @Model.StylistName </h1>

@if (@Model.Clients.Count == 0)
{
  <h3>@Model.StylistName does not have any clients</h3>
}
else
{
  <h2>@Model.StylistName clients </h2>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li> @Html.ActionLink($"{client.ClientName}", "Details","Clients", new { id = client.ClientId }) </li>
    }
  </ul>
<p>@Html.ActionLink("Click here to go back to stylists", "Index")</p>
}
